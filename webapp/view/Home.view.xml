<mvc:View controllerName="project1.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    displayBlock="true">
    <Page id="page" title="Hostel Management System" class="homePageBackground" showHeader="false">
        <content>
            <VBox class="sapUiSmallMargin" justifyContent="Center" alignItems="Center" height="100%">
                
                <VBox alignItems="Center" class="sapUiLargeMarginBottom">
                    <core:Icon src="sap-icon://wrench" size="6rem" color="#0a6ed1" class="sapUiMediumMarginBottom" xmlns:core="sap.ui.core" />
                    <Title text="Maintenance Portal" level="H1" class="heroTitle"/>
                    <Text text="Report issues, track repairs, and manage facilities efficiently." class="subTitle sapUiTinyMarginTop" />
                </VBox>

                <HBox wrap="Wrap" justifyContent="Center" width="100%">
                    <GenericTile class="sapUiMediumMargin fancyCard accentTopBorder" header="Student Portal" subheader="Login as Student" press=".onPressStudent" backgroundImage="sap-icon://student">
                        <TileContent>
                            <ImageContent src="sap-icon://add-activity" />
                        </TileContent>
                    </GenericTile>
                    
                    <GenericTile class="sapUiMediumMargin fancyCard accentTopBorder" header="Admin Portal" subheader="Login as Manager" press=".onPressAdmin" backgroundImage="sap-icon://manager">
                        <TileContent>
                            <ImageContent src="sap-icon://action-settings" />
                        </TileContent>
                    </GenericTile>
                </HBox>

                <ToolbarSpacer height="50px"/>
                <Text text="Â© 2026 University Hostel Services" class="sapUiTinyMarginTop" />

            </VBox>
        </content>
    </Page>
</mvc:View> 
