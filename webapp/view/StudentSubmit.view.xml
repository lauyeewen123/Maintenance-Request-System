<mvc:View controllerName="project1.controller.StudentSubmit"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">
    <Page id="submitPage" title="Report New Issue" showNavButton="true" navButtonPress=".onNavBack" class="homePageBackground">
        <content>
            <VBox class="sapUiMediumMargin" justifyContent="Center" alignItems="Center">
                
                <VBox width="100%" maxWidth="800px" class="formContainer fancyCard">
                    <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                        <core:Icon src="sap-icon://add-document" size="2rem" color="#0a6ed1" class="sapUiSmallMarginEnd" xmlns:core="sap.ui.core"/>
                        <Title text="Maintenance Request Form" level="H2"/>
                    </HBox>

                    <f:SimpleForm id="SimpleFormDisplay354"
                        editable="true"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
                        <f:content>
                            <core:Title text="General Information" xmlns:core="sap.ui.core" />
                            <Label text="Student Name" />
                            <Input value="{maintenance>/newTicket/studentName}" editable="false" icon="sap-icon://student"/>
                            
                            <Label text="Room Number" />
                            <Input value="{maintenance>/newTicket/room}" editable="false" icon="sap-icon://building"/>

                            <core:Title text="Issue Details" xmlns:core="sap.ui.core" />
                            <Label text="Category" required="true"/>
                            <Select id="categorySelect" selectedKey="{maintenance>/newTicket/category}" items="{maintenance>/categories}" icon="sap-icon://sys-find">
                                <core:Item key="{maintenance>key}" text="{maintenance>text}" xmlns:core="sap.ui.core" />
                            </Select>

                            <Label text="Description" required="true"/>
                            <TextArea id="descriptionArea" value="{maintenance>/newTicket/description}" placeholder="Please describe the issue..." rows="5" growing="true" />

                            <Label text="Evidence" required="true" />
                            <u:FileUploader id="fileUploader" name="myFileUpload" placeholder="Upload photo..." style="Emphasized" icon="sap-icon://attachment-photo"/>
                            
                        </f:content>
                    </f:SimpleForm>

                    <HBox justifyContent="End" class="sapUiMediumMarginTop">
                         <Button text="Cancel" type="Transparent" press=".onNavBack" class="sapUiSmallMarginEnd" />
                         <Button text="Submit Request" type="Emphasized" press=".onSubmit" class="scanButton" />
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
