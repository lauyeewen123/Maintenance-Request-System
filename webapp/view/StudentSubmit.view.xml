<mvc:View controllerName="project1.controller.StudentSubmit"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">
    <Page id="submitPage" title="Report New Issue" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm id="SimpleFormDisplay354"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Maintenance Request Form"
                    labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
                    columnsXL="1" columnsL="1" columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <Label text="Student Name" />
                        <Input value="{maintenance>/newTicket/studentName}" editable="false" />
                        
                        <Label text="Room Number" />
                        <Input value="{maintenance>/newTicket/room}" editable="false" />

                        <Label text="Category" required="true"/>
                        <Select id="categorySelect" selectedKey="{maintenance>/newTicket/category}" items="{maintenance>/categories}">
                            <core:Item key="{maintenance>key}" text="{maintenance>text}" xmlns:core="sap.ui.core" />
                        </Select>

                        <Label text="Description" required="true"/>
                        <TextArea id="descriptionArea" value="{maintenance>/newTicket/description}" placeholder="Please describe the issue..." rows="4" />

                        <Label text="Evidence" />
                        <u:FileUploader id="fileUploader" name="myFileUpload" placeholder="Click to upload photo" style="Emphasized" />
                        
                    </f:content>
                </f:SimpleForm>

                <HBox justifyContent="End" class="sapUiSmallMarginTop">
                     <Button text="Submit Request" type="Emphasized" press=".onSubmit" />
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
