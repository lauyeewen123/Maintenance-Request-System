<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Ticket Details: {maintenance>id}" contentWidth="500px">
        <content>
            <f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" uniqueContainerId="detailsForm">
                <f:content>
                    <Label text="Student Name" />
                    <Text text="{maintenance>studentName}" />

                    <Label text="Room" />
                    <Text text="{maintenance>room}" />

                    <Label text="Category" />
                    <Text text="{maintenance>category}" />

                    <Label text="Date Submitted" />
                    <Text text="{maintenance>date}" />

                    <Label text="Description" />
                    <Text text="{maintenance>description}" wrapping="true" />
                    
                    <Label text="Current Status" />
                    <ObjectStatus text="{maintenance>status}" state="{= ${maintenance>status} === 'Completed' ? 'Success' : ${maintenance>status} === 'In Progress' ? 'Information' : 'Warning' }" />

                    <Label text="Assigned Technician" visible="{= !!${maintenance>technician} }" />
                    <Text text="{maintenance>technician}" visible="{= !!${maintenance>technician} }" />

                </f:content>
            </f:SimpleForm>
        </content>
        <endButton>
            <Button text="Close" press=".onCloseDetails" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>